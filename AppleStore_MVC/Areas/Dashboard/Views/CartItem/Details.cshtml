@model AppleStore_MVC.Data.CartItem

@{
	ViewData["Title"] = "Details";
}

<!-- Begin Page Content -->
<div class="container-fluid">

	<!-- Page Heading -->
	@* <h1 class="h3 mb-2 text-gray-800">Tables</h1> *@
	@* <p class="mb-4">
		DataTables is a third party plugin that is used to generate the demo table below.
		For more information about DataTables, please visit the <a target="_blank"
																   href="https://datatables.net">official DataTables documentation</a>.
	</p> *@

	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3 d-flex justify-content-between align-items-center">
			<h6 class="m-0 font-weight-bold text-primary">Cart Item Detail</h6>
		</div>
		<div class="card-body">
			<dl class="row">
				<dt class="col-sm-2">
					Quantity
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.quantity)
				</dd>
				<dt class="col-sm-2">
					Unit Price
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.unitPrice)
				</dd>
				<dt class="col-sm-2">
					Cart Id
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Cart.id)
				</dd>
				<dt class="col-sm-2">
					Product Name
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Product.ProductId)
				</dd>
			</dl>
			<div>
				<a asp-action="Edit" asp-route-id="@Model.CartItemId">Edit</a> |
				<a asp-action="Index">Back to List</a>
			</div>
		</div>
		
	</div>

</div>
