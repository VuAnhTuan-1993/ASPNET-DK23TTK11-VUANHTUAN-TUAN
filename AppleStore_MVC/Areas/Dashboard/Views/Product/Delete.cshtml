@model AppleStore_MVC.Data.Product

@{
	ViewData["Title"] = "Delete";
}

<!-- Begin Page Content -->
<div class="container-fluid">

	<!-- Page Heading -->
	@* <h1 class="h3 mb-2 text-gray-800">Tables</h1> *@
