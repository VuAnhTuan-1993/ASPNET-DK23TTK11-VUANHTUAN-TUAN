@model AppleStore_MVC.Data.Product

@{
	ViewData["Title"] = "Details";
}

<!-- Begin Page Content -->
<div class="container-fluid">

	<!-- Page Heading -->
	@* <h1 class="h3 mb-2 text-gray-800">Tables</h1> *@
	@* <p class="mb-4">
		DataTables is a third party plugin that is used to generate the demo table below.
		For more information about DataTables, please visit the <a target="_blank"
																   href="https://datatables.net">official DataTables documentation</a>.
	</p> *@

	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3 d-flex justify-content-between align-items-center">
			<h6 class="m-0 font-weight-bold text-primary">Product Detail</h6>
		</div>
		<div class="card-body">
			<dl class="row">
				<dt class="col-sm-2">
					Product Name
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.ProductName)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Description)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Description)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Price)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Price)
				</dd>
				<dt class="col-sm-2">
					Image
				</dt>
				@* <dd class="col-sm-10">
					@Html.DisplayFor(model => model.ImageLink)
				</dd> *@
				<dd class="col-sm-10">
					<img src="@Url.Content(Model.ImageLink)" alt="Ảnh sản phẩm" style="max-width:200px; height:auto;" />
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Amount)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Amount)
				</dd>
				<dt class="col-sm-2">
					Sold Quantity
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.SoldQuantity)
				</dd>
				<dt class="col-sm-2">
					Category Name
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Category.CategoryName)
				</dd>
			</dl>
			<div>
				<a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
				<a asp-action="Index">Back to List</a>
			</div>
		</div>
	</div>
</div>
